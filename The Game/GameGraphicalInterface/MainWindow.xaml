<Window x:Class="GameGraphicalInterface.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameGraphicalInterface"
        mc:Ignorable="d"
        Title="The Project Game" Height="600" Width="600" MinWidth="600" MinHeight="600" Closing="Window_Closing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0" x:Name="Board"/>
            <ColumnDefinition Width="*" x:Name="Welcome"/>
        </Grid.ColumnDefinitions>

        <StackPanel x:Name="panel" Grid.Column="0" Orientation="Vertical">
        </StackPanel>

        <Button x:Name="StartButton" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center" Height="50" Width="100" Click="StartPrinting">Start Show</Button>

    </Grid>
</Window>
